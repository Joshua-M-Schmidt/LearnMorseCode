<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:bl_arrowDirection="right"
    app:bl_arrowHeight="10dp"
    app:bl_arrowPosition="16dp"
    app:bl_arrowWidth="8dp"
    app:bl_cornersRadius="15dp"
    app:bl_bubbleColor="@color/yellow"
    app:bl_strokeColor="@color/light_grey"
    app:bl_strokeWidth="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:text="Right"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="35dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/feedback_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:text="Its: –––"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>
</com.daasuu.bl.BubbleLayout>